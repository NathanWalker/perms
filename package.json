{
    "name": "nativescript-perms",
    "version": "1.0.0",
    "scripts": {
        "tsc": "cp src/permissions.d.ts plugin && cp README.md plugin && tsc -skipLibCheck",
        "build": "npm i && npm run tsc",
        "demo.ios": "npm i && npm run tsc && cd demo && tns run ios",
        "demo.android": "npm i && npm run tsc && cd demo && tns run android",
        "clean.demo": "rimraf demo/hooks demo/node_modules demo/platforms",
        "clean": "rimraf plugin/ios plugin/android plugin/**/*.d.ts plugin/**/*.js plugin/**/*.js.map plugin/node_modules plugin/package-lock.json",
        "plugin.watch.tsc": "npm run tsc -- -w",
        "plugin.watch.android": "npm i && npm-watch build.android",
        "plugin.watch.ios": "npm i && npm-watch build.ios",
        "plugin.watch": "npm run plugin.watch.tsc & npm run plugin.watch.android & npm run plugin.watch.ios",
        "publish": "npm run build && lerna publish",
        "commitmsg": "commitlint -e $GIT_PARAMS"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@types/node": "^10.12.21",
        "husky": "^2.2.0",
        "lerna": "^3.13.4",
        "npm-watch": "^0.6.0",
        "prompt": "^1.0.0",
        "rimraf": "^2.6.3",
        "tns-core-modules": "5.3.2",
        "tns-platform-declarations": "^5.3.2",
        "tslint": "^5.16.0",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^8.0.1",
        "typescript": "~3.4.5"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akylas/nativescript-perms.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Akylas/nativescript-perms/issues"
    },
    "homepage": "https://github.com/Akylas/nativescript-perms#readme",
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    }
}
