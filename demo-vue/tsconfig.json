{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable",
            "es2017"
        ],
        "baseUrl": ".",
        "paths": {
            "@nativescript-community/perms": [
                "../src"
            ],
            "*": [
                "./node_modules/tns-core-modules/*",
                "./node_modules/*"
            ],
            "~/*": [
                "app/*"
            ]
        },
        "moduleResolution": "node",
        "removeComments": false
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "../src/node_modules",
        "../src/**/*.d.ts",
        "node_modules",
        "platforms"
    ]
}